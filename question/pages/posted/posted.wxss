/* pages/posted/posted.wxss */

.weui-cells:after {
  border-bottom: 0rpx solid rgba(0, 0, 0, 0.1);
}

.weui-textarea {
  height: 210rpx;
}

.weui-uploader__bd {
  padding: 30rpx;
}

.uplode-box {
  padding: 30rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.uplodedemo {
  width: 45rpx;
  height: 45rpx;
}

.btn-box {
  width: 100%;
  position: fixed;
  bottom: 60rpx;
}

.btn-save {
  float: right;
  width: 160rpx;
  font-size: 26rpx;
  margin-top: -10rpx;
  color: #fff;
  background-color: #f6ab00;
}

.weui-btn {
  width: 90%;
  color: #fff;
  background: #f6ab00;
}

.weui-uploader__file {
  margin-right: 9px;
  margin-bottom: 15px;
  position: relative;
  width: 30%;
}

.picdel {
  position: absolute;
  top: -16rpx;
  right: 7rpx;
}

.search-bind {
  width: 180rpx;
  background: #f0f0f0;
  display: inline-block;
  padding: 10rpx 20rpx;
  margin-bottom: 30rpx;
  border-radius: 7rpx;
  font-size: 26rpx;
  text-align: center;
}

.btn-active {
  background: #f6ab00;
  color: #fff;
}
