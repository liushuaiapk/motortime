      <image class="weui-grid__icon weui-sharepic" src="/images/wecheck.png" />
      <view class="weui-grid__label">微信好友</view>
    </button>
    <view bindtap='showposter' class="weui-grid share-grid">
      <image class="weui-grid__icon weui-sharepic" src="/images/friend.png" />
      <view class="weui-grid__label">朋友圈</view>
    </view>
  </view>
</view>
<view class='maskBar' wx:if="{{showmask}}">
  <view class='backmask'>
    <image class="share_url" src="{{share_url}}" data-src="{{share_url}}" data-img="{{share_urllist}}" bindtap="previewImg"></image>
  </view>
  <view class="knowbox">
    <button class='savepic' bindtap='closemask'>知道了</button>
