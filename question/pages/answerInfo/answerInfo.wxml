  <view class="posbottom" style="height:{{botheight}}px" hidden="{{inputshow}}">
    <view class="weui-input" placeholder="" bindtap="focusinput">发表评论...</view>
    <view class="iconright">
      <view class="bottom-icon">
        <image class="bicon mr-10" src="/images/comment.png"></image>
        <text class="c-gray f-12">{{comment_num}}</text>
      </view>
      <view class="bottom-icon" data-code="{{id}}" data-coll="{{is_collect}}" bindtap="bindCollect">
        <image class="bicon" src="/images/{{is_collect==0 ? 'collect_active' : 'collect'}}.png"></image>
      </view>
      <view class="bottom-icon" bindtap="sharePic">
        <image class="bicon" src="/images/shared.png"></image>

      </view>
    </view>
  </view>
  <view class="shade" wx:if="{{select}}" bindtap='close' catchtouchmove='ture'></view>
  <view class="posbottomd" style="height:{{bottheight+120}}px" hidden="{{!inputshow}}">
    <view class="commpic-box">
      <view class="weui-uploader__bd">
        <view class="weui-uploader__files" id="uploaderFiles">
          <block wx:for="{{files}}" wx:key="*this">
            <view class="weui-uploader__file">
              <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" bindtap="previewImage" id="{{item}}" />
              <view class="weui-badge picdel" data-num='{{index}}' bindtap="delpic">X</view>
            </view>
          </block>
        </view>
      </view>
    </view>
