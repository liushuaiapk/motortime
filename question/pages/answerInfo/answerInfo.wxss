@import '../question/index.wxss';

.weui-btn {
  color: #000;
  background: #fff;
  border: 1rpx solid #eaeaea;
}

.answer-box {
  border-top: 10rpx solid #eaeaea;
}

.disflexd {
  display: inline-block;
  padding: 30rpx 10rpx;
}

.recom {
  display: inline-block;
  padding: 6px 15px;
  min-width: 8px;
  border-radius: 18px;
  line-height: 1.8;
  text-align: center;
  font-size: 12px;
  vertical-align: middle;
  border: 1rpx solid #9a9a9a;
}

.recom-pic {
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}

.weui-panel {
  margin-top: 30rpx;
}

.weui-panel:before {
  border-top: 0rpx solid rgba(0, 0, 0, 0.1);
}

.replylist {
  background-color: #f7f7f7;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.weui-panel:after {
  border-bottom: 0rpx solid rgba(0, 0, 0, 0.1);
}

.comment {
  padding: 30rpx;
  border-top: 10rpx solid #eaeaea;
  border-bottom: 1rpx solid #eaeaea;
  display: flex;
}

.commentlist {
  padding: 30rpx;
}

.comemhead {
  width: 10%;
  height: 100%;
}

.sofa {
  display: inline-block;
  padding: 0.15em 0.3em;
  border-radius: 10rpx;
  color: #f6ab00;
  line-height: 1.2;
  text-align: center;
  font-size: 20rpx;
  border: 1px solid #f6ab00;
}

.weui-ownpanel {
  border-bottom: 1rpx solid #eaeaea;
}

.right-list {
  line-height: 2;
  width: 90%;
}

.posbottom {
  height: 90rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  padding: 0 30rpx;
  border-top: 1rpx solid #eaeaea;
  display: flex;
  left: 0;
  right: 0;
}

.weui-input {
  height: 48rpx;
  background-color: #f0f0f0;
  width: 50%;
  margin-top: 10rpx;
  padding: 14rpx 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  color: #9a9a9a;
  line-height: 2;
}

.iconright {
  width: 50%;
  display: flex;
  margin-top: 18rpx;
}

.bottom-icon {
  width: 33%;
  text-align: center;
}

.bicon {
  width: 34rpx;
  height: 34rpx;
  vertical-align: middle;
}

.btn-save {
  color: #fff;
  background-color: #f6ab00;
}

.weui-inputd {
  height: 48rpx;
  background-color: #f0f0f0;
  width: 70%;
  margin-top: 10rpx;
  padding: 14rpx 10rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
}

.btn-save {
  color: #fff;
  background-color: #f6ab00;
  height: 74rpx;
  width: 30%;
  margin-top: 10rpx;
  margin: 10rpx 0 0 10rpx;
  line-height: 2.6;
  font-size: 26rpx;
}

.share-btn {
  position: relative;
  background-color: #fff;
  padding-left: 0;
  padding-right: 0;
  margin-top: 1rpx;
}

button::after {
  border: 0px solid rgba(0, 0, 0, 0.2);
}

.posbottomd {
  height: 90rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  padding: 0 30rpx;
  border-top: 1rpx solid #eaeaea;
  left: 0;
  right: 0;
  z-index: 1;
}

.uplode-box {
  margin-top: 30rpx;
}

.uplodedemo {
  width: 45rpx;
  height: 45rpx;
}

.weui-uploader__bd {
  padding: 30rpx;
  max-height: 250rpx;
  overflow-y: auto;
}

.weui-uploader__file {
  position: relative;
  width: 33.33%;
  margin-bottom: 15px;
  margin-right: 0;
}

.picdel {
  position: absolute;
  top: -16rpx;
  right: 100rpx;
}

.weui-uploader__img {
  width: 50px;
  height: 50px;
}

.shade {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  opacity: 0.5;
  background-color: rgba(0, 0, 0, 0.8);
  overflow: hidden;
}

.weui-textarea {
  height: 48rpx;
  border: 1rpx solid #eaeaea;
  padding: 10rpx;
  border-radius: 10rpx;
}

img {
  width: 340px;
  height: 500px;
}

.shaded {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: rgba(0, 0, 0, 0.8);
  opacity: 0.5;
  overflow: hidden;
}

.maskBar {
  width: 70%;
  height: 70%;
  z-index: 2;
  overflow: hidden;
  position: fixed;
  top: 15%;
  left: 15%;
  font-size: 32rpx;
  border-radius: 10rpx;
  background: #fff;
}

.backmask {
  height: 90%;
}

.savepic {
  width: 96%;
  background: #f7f7f7;
  font-size: 28rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  border-radius: 30rpx;
}

.share-img-button {
  background-color: #fff;
  line-height: normal;
  border: none;
  width: 50%;
}

.share-img-button::after {
  border: none;
}

.maskBarbottom {
  width: 100%;
  height: 20%;
  z-index: 2;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  font-size: 32rpx;
  border-radius: 10rpx;
  background: #fff;
}

.weui-sharepic {
  width: 80rpx;
  height: 80rpx;
  background: none;
}

.share-grid {
  padding: 20px 10px;
}

.knowbox {
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.share_url {
  width: 100%;
  height: 100%;
}
