.weui-grids {
  border-top: none;
  border-left: none;
}

.weui-grid {
  border-right: none;
  border-bottom: none;
  padding: 10rpx 10rpx;
}

.weui-grid__icon {
  width: 100%;
  height: 220rpx;
}

.weui-grid__label {
  color: #fff;
  position: absolute;
  top: 40%;
  left: 40%;
}

.weui-badge {
  padding: 0 20rpx;
  background-color: #7bb267;
}

.yespic {
  width: 16rpx;
  height: 12rpx;
  margin-bottom: 5rpx;
}

.btn-boxx {
  position: fixed;
  bottom: 30rpx;
  justify-content: center;
  width: 100%;
}

.weui-btn {
  width: 100%;
  padding: 28rpx 55rpx;
  background-color: #605c6b;
  color: #fff;
}

.inputbox {
  margin-top: 50rpx;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #f8f8f8;
}
