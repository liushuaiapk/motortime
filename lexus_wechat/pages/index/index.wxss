.topicbox {
  margin-bottom: 90rpx;
}

.topicmonth {
  padding: 50rpx 30rpx;
}

.topicimg {
  width: 100%;
  height: 460rpx;
  color: #fff;
  position: relative;
  background-size: 100% 460rpx;
  background-repeat: no-repeat;
  background-position: center;
}

.topicinfo {
  position: absolute;
  bottom: 40rpx;
